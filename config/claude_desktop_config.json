{
  "mcpServers": {
    "dsfr-mcp": {
      "command": "node",
      "args": ["CURRENT_DIR/mcp-dsfr/src/index.js"],
      "env": {
        "NODE_ENV": "production",
        "MCP_CLIENT": "true"
      }
    },
    "ods-widgets": {
      "command": "node",
      "args": ["CURRENT_DIR/mcp-ods-widgets/server.js"],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "angular-mcp": {
      "command": "npx",
      "args": ["@progress/kendo-angular-mcp"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "semgrep": {
      "command": "npx",
      "args": ["-y", "mcp-server-semgrep"]
    },
    "git": {
      "command": "npx",
      "args": ["-y", "mcp-git"]
    },
    "basic-memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "knowledge-graph": {
      "command": "npx",
      "args": ["-y", "mcp-knowledge-graph"],
      "env": {
        "MEMORY_PATH": "CURRENT_DIR/memory/widget-relations"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": ""
      }
    }
  }
}