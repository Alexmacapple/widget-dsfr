{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["html"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "no-debugger": ["error"],
    "no-eval": ["error"],
    "no-implied-eval": ["error"],
    "no-script-url": ["error"],
    "no-inline-html": "off"
  },
  "settings": {
    "html/html-extensions": [".html", ".htm"],
    "html/indent": "+2"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "*.min.js",
    "mcp-dsfr/node_modules/",
    "mcp-ods-widgets/node_modules/"
  ]
}